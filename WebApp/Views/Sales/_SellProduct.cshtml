@model Product

@if (Model != null)
{
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" type="text" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        @if (Model.Price != null)
        {
            <input class="form-control" id="price" type="text" readonly value="@(string.Format("{0:c}", @Model.Price))" />
        }
        else
        {
            <input class="form-control" id="price" type="text" readonly value="Price Not Available" />
        }
    </div>
}
else
{
    <p>Product Not Found</p>
}
